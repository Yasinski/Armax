<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="third.model.Movie" table="MOVIE">
    <id name="id" column="MOVIE_ID" type="java.lang.Integer">
      <generator class="increment"/>
    </id>
    <property name="title" type="java.lang.String"/>
    <property name="releaseDate" type="java.lang.String"/>
    <property name="rating" type="java.lang.Integer"/>
    <set name="genres" lazy="true" table="MOVIE_GENRE">
      <key column="MOVIE_ID"/>
      <element type="string" column="GENRE" not-null="true"/>
    </set>
    <many-to-one name="director"
                 class="third.model.Director"
                 column="DIR_ID"
                 not-null="false"
        />
    <set name="actors"
         table="MOVIE_ACTOR"
         cascade="save-update">
      <key column="MOVIE_ID"/>
      <many-to-many column="ACTOR_ID" class="third.model.Actor" />
    </set>
  </class>
</hibernate-mapping>