http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.1.xsd">


  <http auto-config="true" access-denied-page="/jsp/error403.jsp">
    <intercept-url pattern="/jsp/registration.jsp" access="ROLE_ADMIN,ROLE_USER, ROLE_ANONYMOUS"/>
    <intercept-url pattern="/start/" access="ROLE_ADMIN,ROLE_USER, ROLE_ANONYMOUS"/>
    <intercept-url pattern="/*Add*/" access="ROLE_USER"/>
    <intercept-url pattern="/*Update*/" access="ROLE_ADMIN"/>
    <intercept-url pattern="/*Delete*/" access="ROLE_ADMIN"/>
    <form-login login-page="/jsp/login.jsp" default-target-url="/start/"
                authentication-failure-url="/jsp/login.jsp?error=true"/>
    <logout logout-url="/logout" logout-success-url="/start/"/>
    <anonymous username="guest" granted-authority="ROLE_ANONYMOUS"/>
    <remember-me/>
  </http>


