<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="third.model.Director" table="DIRECTOR">
    <id name="id" column="DIRECTOR_ID" type="java.lang.Integer">
      <generator class="increment"/>
    </id>
    <property name="FirstName" column="FName" type="java.lang.String"/>
    <property name="LastName" column="LName" type="java.lang.String"/>
    <set name="hisMovies" lazy="true"
         inverse="true"
         cascade="save-update">
      <key column="DIR_ID"/>
      <one-to-many class="third.model.Movie"/>
    </set>
  </class>
</hibernate-mapping>