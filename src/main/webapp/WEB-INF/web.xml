<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:spring-configuration/spring-mapping-url.xml
            classpath:spring-configuration/applicationContext.xml
            classpath:spring-configuration/security.xml
        </param-value>
    </context-param>

    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>
            org.springframework.web.util.Log4jConfigListener
        </listener-class>
    </listener>

    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>


    <servlet>
        <servlet-name>gwtapp</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                classpath:spring-configuration/spring-gwt.xml
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>gwtapp</servlet-name>
        <url-pattern>/application/rpc/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authServlet</servlet-name>
        <servlet-class>third.service.gwt.SampleApplicationServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authServlet</servlet-name>
        <url-pattern>/application/rpc/auth</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>springapp</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                classpath:spring-configuration/spring-mapping-url.xml
                classpath:spring-configuration/applicationContext.xml
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>springapp</servlet-name>
        <url-pattern>/start/</url-pattern>
        <url-pattern>/actorAdd/</url-pattern>
        <url-pattern>/actorDirectorsList/</url-pattern>
        <url-pattern>/actorsInfo/</url-pattern>
        <url-pattern>/actorMoviesList/</url-pattern>
        <url-pattern>/directorActorsList/</url-pattern>
        <url-pattern>/directorMoviesList/</url-pattern>
        <url-pattern>/moviePage/</url-pattern>
        <url-pattern>/movieAdd/</url-pattern>
        <url-pattern>/movieAddShort/</url-pattern>
        <url-pattern>/moviesWithoutActors/</url-pattern>
        <url-pattern>/movieUpdate/</url-pattern>
        <url-pattern>/registration/</url-pattern>
        <url-pattern>/jsp/start.jsp/</url-pattern>
    </servlet-mapping>

